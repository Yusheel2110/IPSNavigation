<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010">

    <!-- ========================================================= -->
    <!-- MAIN SCREEN CONTENT -->
    <!-- ========================================================= -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <!-- ===== TOP CONTROLS ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center_horizontal">

            <!-- ðŸ”¹ START NODE DROPDOWN -->
            <Spinner
                android:id="@+id/startNodeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:spinnerMode="dropdown"
                android:popupBackground="@android:color/white" />

            <!-- ðŸ”¹ DESTINATION DROPDOWN -->
            <Spinner
                android:id="@+id/destinationSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:spinnerMode="dropdown"
                android:popupBackground="@android:color/white" />

            <!-- ðŸ”¹ LOCATE & GO -->
            <Button
                android:id="@+id/navigateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Locate &amp; Go"
                android:backgroundTint="#E53935"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- ðŸ”¹ WHERE AM I -->
            <Button
                android:id="@+id/locateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Where Am I?"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ===== CURRENT POSITION LABEL ===== -->
        <TextView
            android:id="@+id/predictedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current position: Unknown"
            android:textColor="@android:color/white"
            android:paddingStart="16dp"
            android:paddingBottom="4dp"
            android:textSize="15sp" />

        <!-- ===== NAVIGATION INSTRUCTIONS PANEL ===== -->
        <TextView
            android:id="@+id/instructionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:background="#1E1E1E"
            android:text="Navigation instructions will appear here." />

        <!-- ===== MAP FRAGMENT CONTAINER ===== -->
        <fragment
            android:id="@+id/mapFragmentContainer"
            android:name="za.ac.ukzn.ipsnavigation.ui.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- ===== ðŸ“¡ OPEN WIFI SCANNER BUTTON (BOTTOM) ===== -->
        <Button
            android:id="@+id/openWifiPageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¡ Open Wi-Fi Scanner"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white"
            android:layout_margin="12dp"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <!-- ========================================================= -->
    <!-- CENTERED LOADING OVERLAY (FAKE WIFI SCAN) -->
    <!-- ========================================================= -->
    <LinearLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#AA000000"
        android:visibility="gone"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/loadingSpinner"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@android:color/white" />

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¡ Scanning nearby access points..."
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</FrameLayout>
